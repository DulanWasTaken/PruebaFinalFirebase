<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/msg_row"
    android:padding="7dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_content"
        android:background="@drawable/chat_background_blue">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_left"
            android:layout_marginLeft="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sender_name_tv"
                android:textStyle="bold"
                android:text="sender"
                android:textSize="17dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="msg"
                android:textSize="15dp"
                android:id="@+id/msg_tv"
                android:layout_below="@+id/sender_name_tv"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_date_tv_right"
            android:text="date"
            android:textSize="9dp"
            android:layout_below="@+id/chat_left"
            android:layout_toEndOf="@id/chat_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msg_date_tv_down"
            android:text="date"
            android:textSize="9dp"
            android:layout_below="@+id/chat_left"
            android:layout_alignRight="@+id/chat_left"/>


    </RelativeLayout>



</RelativeLayout>

