<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="es.udc.tfg.pruebafinalfirebase.Group.EditGroupFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_above="@+id/layout_rating"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ip_title_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="@dimen/cast_libraries_material_featurehighlight_text_header_size"/>

            <EditText
                android:id="@+id/ip_description_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ip_title_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="@dimen/cast_libraries_material_featurehighlight_text_body_size"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_rating"
        android:orientation="vertical"
        android:layout_above="@+id/delete_ip_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest point rating:"
            android:id="@+id/textView"
            android:layout_below="@+id/ip_description_et"
            android:layout_centerHorizontal="true" />


        <RatingBar
            android:id="@+id/ip_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/ip_info_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="skaÃ±ldfjs"
            android:layout_below="@+id/ip_ratingBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:gravity="end|center_vertical"
        android:paddingRight="20dp"
        android:id="@+id/delete_ip_button"
        android:background="@drawable/ic_cancel_background"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:id="@+id/save_ip_button"
        android:background="@drawable/ic_accept_background"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
