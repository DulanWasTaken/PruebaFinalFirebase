<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.udc.tfg.pruebafinalfirebase.InterestPointFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_title_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_header_size"/>

    <EditText
        android:id="@+id/ip_description_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ip_title_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/cast_libraries_material_featurehighlight_text_body_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest point rating:"
        android:id="@+id/textView"
        android:layout_below="@+id/ip_description_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp" />


    <RatingBar
        android:id="@+id/ip_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ip_info_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skaÃ±ldfjs"
        android:layout_below="@+id/ip_ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:gravity="start|center_vertical"
        android:paddingLeft="30dp"
        android:id="@+id/ip_save"
        android:background="@drawable/ic_accept_background"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/ip_description_et"
        android:visibility="gone"/>

</RelativeLayout>
