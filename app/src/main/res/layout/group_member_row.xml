<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:id="@+id/row">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_member_name"
            android:layout_toEndOf="@+id/photo_img_group_member"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>


        <es.udc.tfg.pruebafinalfirebase.multipickcontact.RoundedImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:id="@+id/photo_img_group_member"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            android:id="@+id/delete_group_member_button"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toStartOf="@id/delete_group_member_button"
            android:layout_centerVertical="true"
            android:id="@+id/admin_button"
            android:src="@android:drawable/ic_media_previous"
            android:clickable="false"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/admin_button"
            android:layout_centerVertical="true"
            android:id="@+id/admin_text_view"
            android:text="ADMIN"
            android:textStyle="italic"/>

    </RelativeLayout>

</LinearLayout>